<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>M7Kit</defName>
    <label>Mech 7 Kit</label>
    <description>A container of resources neatly organized and packed tightly so the precise mechanisms of mech assembler can use them to nealty and quickly assemble a mechanoid who's ID is labled on the container.</description>
    <graphicData>
      <texPath>Things/Kits/BoxM7</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <stackLimit>20</stackLimit>
    <useHitPoints>false</useHitPoints>
    <statBases>
      <MarketValue>4850</MarketValue>
      <Mass>200</Mass>
      <Flammability>0.0</Flammability>
      <WorkToMake>3000</WorkToMake>
    </statBases>
    <thingCategories>
      <li>ItemsMisc</li>
    </thingCategories>
    <drawGUIOverlay>true</drawGUIOverlay>
    <techLevel>Spacer</techLevel>
    <tradeTags>
      <li>ExoticMisc</li>
    </tradeTags>
    <recipeMaker>
      <researchPrerequisite>BasicMechtech</researchPrerequisite>
      <workSpeedStat>SubcoreEncodingSpeed</workSpeedStat>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>SubcoreEncoder</li>
      </recipeUsers>
      <mechanitorOnlyRecipe>true</mechanitorOnlyRecipe>
      <unfinishedThingDef>UnfinishedSubcore</unfinishedThingDef>
      <soundWorking>SubcoreEncoder_Working</soundWorking>
    </recipeMaker>
    <costList>
			<CVNMechComposite>10</CVNMechComposite>
			<ComponentIndustrial>35</ComponentIndustrial>
			<ComponentSpacer>20</ComponentSpacer>
			<SubcoreHigh>2</SubcoreHigh>
			<NanostructuringChip>2</NanostructuringChip>
    </costList>
	<modExtensions>
	<li Class="Thek_VFSpawner.ModExtension_VehicleDefToSpawn">
	<VehicleDefToSpawn>Mechtek</VehicleDefToSpawn>
	</li>
	</modExtensions>
  </ThingDef>

